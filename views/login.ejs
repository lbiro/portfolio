<style>
    html,
    body {
        background-image: url("data:image/<%= contentType %>;base64, <%= image %>");
    }
</style>

<div class="container row mt-5 position-fixed">
    <div class="col-md-12 m-auto">
        <div class="card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
            <%- include('./partials/messages') %>
                <form action="/users/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control inputStyle" placeholder="Enter Email" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control mb-2 inputStyle"
                            placeholder="Enter Password" />
                    </div>
                    <!-- <button type="submit" class="btn btn-primary btn-block col-12 btnStyle">Login</button> -->
                    <button type="submit" class="btn btn-block col-12 btnStyle">Login</button>
                </form>

                <p></p>

                <!-- <p class="lead mt-4 pStyle">
                    No Account? <a class="aStyle" href="/users/register">Register</a>
                </p> -->
        </div>
    </div>
</div>